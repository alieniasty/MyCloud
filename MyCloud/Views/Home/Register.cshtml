@model MyCloud.ViewModel.RegisterViewModel
@{
    ViewData["Title"] = "Rejestracja";
}
@section Scripts {

    <link href="~/css/register.css" rel="stylesheet" />
    <script src="~/lib/app/login.js"></script>
}

<div class="cloud-img-div col-md-4 col-md-offset-4">
    <img src="~/img/cloud-img.ico" id="cloud-img" />
</div>

<div class="col-md-4 col-md-offset-4">
    <p id="title">My Cloud</p>
</div>

<form asp-action="Register" asp-controller="Home" asp-antiforgery="true" method="post" class="login-group col-md-4 col-md-offset-4 col-xs-6 col-xs-offset-3">
    <div class="input-group" id="input-user-div">
        <span class="input-group-addon"><i class="fa fa-user"></i></span>
        <input asp-for="@Model.Username" class="form-control" type="text" placeholder="Użytkownik" />
    </div>

    <div class="input-group" id="input-password-div">
        <span class="input-group-addon">
            <i class="fa fa-lock"></i>
        </span>

        <input asp-for="@Model.Password" id="js-input-password" class="form-control" type="password" placeholder="Hasło" />

        <span class="input-group-addon" id="js-eye-switch">
            <i id="js-eye" class="fa fa-eye"></i>
        </span>
    </div>
    
    <div class="input-group" id="input-confirm-div">
        <span class="input-group-addon">
            <i class="fa fa-lock"></i>
        </span>
        
        <input asp-for="@Model.ConfirmPassword" class="form-control" type="password" placeholder="Potwierdź hasło" />
    </div>
    
    <div class="input-group" id="input-email-div">
        <span class="input-group-addon">
            <i class="fa fa-at"></i>
        </span>

        <input asp-for="@Model.Email" class="form-control" type="email" placeholder="E-mail" />
    </div>
    
    <span asp-validation-for="Username" class="text-danger"></span><br/>
    <span asp-validation-for="Password" class="text-danger"></span><br />
    <span asp-validation-for="ConfirmPassword" class="text-danger"></span><br />
    <span asp-validation-for="Email" class="text-danger"></span>

    <button class="access-btn btn btn-success btn-lg center-block" id="log-in-btn" type="submit">Zarejestruj</button>

    <a asp-action="Login" asp-controller="Home">Logowanie</a>
</form>

